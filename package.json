{
    "name": "ts-loader-problem-matcher",
    "displayName": "ts-loader Problem Matcher",
    "description": "Problem matcher for ts-loader",
    "version": "0.1.0",
    "publisher": "alqiu",
    "repository": {
        "type": "git",
        "url": "https://github.com/Lixire/ts-loader-problem-matcher.git"
    },
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Languages"
    ],
    "contributes": {
        "problemMatchers": [
            {
                "name": "ts-loader-1",
                "owner": "typescript",
                "severity": "error",
                "fileLocation": "relative",
                "label": "ts-loader",
                "pattern": [
                    {
                        "regexp": "ERROR in (.*)",
                        "file": 1
                    },
                    {
                        "regexp": "\\((\\d+,\\d+)\\): (.*)",
                        "location": 1,
                        "message": 2
                    }
                ]
            },
            {
                "name": "ts-loader-2",
                "owner": "typescript",
                "severity": "error",
                "fileLocation": "relative",
                "label": "ts-loader",
                "pattern": [
                    {
                        "regexp": "ERROR in (.*)",
                        "file": 1
                    },
                    {
                        "regexp": "^(\\w[\\w\\s]*:( \\w+:)* .*)(\\((\\d+:\\d+)?\\))?",
                        "message": 1,
                        "location": 3
                    },
                    {
                        "regexp": ".*(\\d+):(\\d+)-?(\\d+)?(.*)",
                        "line": 1,
                        "column": 2,
                        "endColumn": 3
                    }
                ]
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}